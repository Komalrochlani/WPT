<html>
    <head>
        <link rel="stylesheet" href="./css/style.css">
        <link rel="stylesheet" href="./css/bootstrap-4.6.2-dist/css/bootstrap.css"></link>
        
    </head>
    <body>
        <h1>Product Management System</h1>
        <form action="/displayAddForm" method="get">
            <button type="submit" id="btn" name="btn" class="btn btn-primary">Add Product</button>
           
            <table class="table table-striped">
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
                
                    <%for(var i=0;i<prodata.length;i++){%>
                    <tr>
                        <td><%=prodata[i].pid%></td>
                        <td><%=prodata[i].pname%></td>
                        <td><%=prodata[i].price%></td>
                        <td><%=prodata[i].qty%></td>    
                        <td>
                            <a href="/edit/<%=prodata[i].pid%>">Edit</a>/
                            <a href="/delete/<%=prodata[i].pid%>" onclick="return confirm('Are you sure to delete this item?')">Delete</a>
                            
                        </td>  
                    </tr>
                <%}%>
            </table>
            <img  src="./image/clock.jpg"/>
        </form>
    </body>
</html>